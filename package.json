{
  "name": "hb-ng-sdk",
  "version": "0.0.2-build0006",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "tom.lo@101medialab.com",
  "bugs": {
    "url": "https://github.com/101medialab/angular2-sdk/issues"
  },
  "scripts": {
    "cleanup": "rimraf ./**/*.ngfactory.ts ./**/*.ngstyle.ts ./**/*.ngsummary.json build dist hb-angular-sdk",
    "ngc": "node_modules/.bin/ngc -p tsconfig.json",
    "start": "npm run cleanup && npm run ngc",
    "start-prod": "npm run ngc && npm run build",
    "build": "npm run cleanup && npm run ngc && webpack --config webpack.config.js -p",
    "deploy": "gh-pages -d dist",
    "aot": "npm run cleanup && npm run ngc",
    "jit": "npm run cleanup",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@angular/animations": "^4.3.3",
    "@angular/common": "^4.3.3",
    "@angular/compiler": "^4.3.3",
    "@angular/compiler-cli": "^4.3.3",
    "@angular/core": "^4.3.3",
    "@angular/forms": "^4.3.3",
    "@angular/http": "^4.3.3",
    "@angular/material": "^2.0.0-beta.10",
    "@angular/platform-browser": "^4.3.3",
    "@angular/platform-browser-dynamic": "^4.3.3",
    "@angular/platform-server": "^4.3.3",
    "@angular/router": "^4.3.3",
    "angular2-jwt": "^0.2.2",
    "angular2-template-loader": "^0.6.0",
    "angulartics2": "^1.5.1",
    "bootstrap": "^3",
    "bootstrap-sass": "^3.3.6",
    "copy-webpack-plugin": "^4.0.1",
    "core-js": "^2.4.1",
    "dateformat": "^1.0.12",
    "flickity": "^2.0.4",
    "flickity-bg-lazyload": "^1.0.0",
    "intl": "^1.1.0",
    "jquery": "^2.2.3",
    "json-editor": "git+https://github.com/jdorn/json-editor.git",
    "lodash": "^4.11.1",
    "moment": "^2.17.1",
    "ng2-datetime-picker": "^0.12.0",
    "ng2-file-upload": "^1.1.4-2",
    "perfect-scrollbar": "git+https://github.com/noraesae/perfect-scrollbar.git",
    "process": "^0.11.9",
    "rx-dom": "^7.0.3",
    "rxjs": "^5.0.3",
    "selectize": "git+https://github.com/brianreavis/selectize.js.git",
    "typescript": "^2.1.5",
    "urijs": "^1.17.1",
    "webpack": "^2.2.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/jquery": "^2.0.39",
    "@types/node": "7.0.0",
    "awesome-typescript-loader": "^3.2.2",
    "chokidar": "1.6.1",
    "concurrently": "3.1.0",
    "gh-pages": "0.12.0",
    "jest": "^20.0.4",
    "jest-preset-angular": "^2.0.5",
    "raw-loader": "0.5.1",
    "rimraf": "2.5.4",
    "source-map-explorer": "1.3.3",
    "style-loader": "0.13.1",
    "to-string-loader": "1.1.5",
    "ts-jest": "^20.0.10"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/101medialab/angular2-sdk.git"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/dist/"
    ],
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/node_modules/jest-preset-angular/setupJest.js",
    "transform": {
      "^.+\\.(ts|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js",
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "src/tsconfig.spec.json",
        "useBabelrc": true
      },
      "__TRANSFORM_HTML__": true
    },
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "(.*)": "<rootDir>/reusable/$1"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!hb-ng2-sdk)/"
    ]
  }
}
