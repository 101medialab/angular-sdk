{
  "name": "hb-ng-sdk",
  "version": "0.0.3-build0000",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "tom.lo@101medialab.com",
  "bugs": {
    "url": "https://github.com/101medialab/angular2-sdk/issues"
  },
  "scripts": {
    "cleanup": "rimraf ./**/*.ngfactory.ts ./**/*.ngstyle.ts ./**/*.ngsummary.json build dist hb-angular-sdk",
    "ngc": "node_modules/.bin/ngc -p tsconfig.json",
    "start": "npm run cleanup && npm run ngc",
    "start-prod": "npm run ngc && npm run build",
    "build": "npm run cleanup && npm run ngc && webpack --config webpack.config.js", // && npm t
    "deploy": "gh-pages -d dist",
    "aot": "npm run cleanup && npm run ngc",
    "jit": "npm run cleanup",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/cdk": "^5.0.4",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/material": "^5.0.4",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/platform-server": "^5.2.0",
    "@angular/router": "^5.2.0",
    "angular2-jwt": "^0.2.3",
    "angular2-template-loader": "^0.6.0",
    "angulartics2": "^4.6.3",
    "babel-preset-env": "^1.6.1",
    "bootstrap-sass": "^3.3.7",
    "copy-webpack-plugin": "^4.3.1",
    "core-js": "^2.5.3",
    "flickity": "^2.0.4",
    "flickity-bg-lazyload": "^1.0.0",
    "jquery": "^3.2.1",
    "json-editor": "git+https://github.com/jdorn/json-editor.git",
    "moment": "^2.20.1",
    "ng2-datetime-picker": "^0.15.1",
    "ng2-file-upload": "^1.3.0",
    "perfect-scrollbar": "0.8.1",
    "rx-dom": "^7.0.3",
    "rxjs": "^5.5.6",
    "selectize": "git+https://github.com/brianreavis/selectize.js.git",
    "typescript": "2.4.2",
    "urijs": "^1.19.0",
    "webpack": "^3.10.0",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@types/jest": "^21.1.10",
    "@types/jquery": "^3.2.18",
    "@types/node": "8.0.53",
    "awesome-typescript-loader": "^3.4.1",
    "jest": "^21.2.1",
    "jest-preset-angular": "^4.0.2",
    "raw-loader": "0.5.1",
    "rimraf": "2.6.2",
    "ts-jest": "^21.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/101medialab/angular2-sdk.git"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/dist/"
    ],
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/setupJest.js",
    "transform": {
      "^.+\\.(ts|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js",
      "^.+\\.jsx?$": "babel-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "reusable/tsconfig.spec.json",
        "useBabelrc": true
      }
    },
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
